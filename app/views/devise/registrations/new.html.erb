<h2>Регистрация</h2>

<%= render partial: 'partials/form_errors', locals: {model: @user} %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


  <div class="row">
    <div class="col-md-6 buffer-top">

      <div class="form-group">
        <%= f.label :eMail %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :Имя %><br/>
        <%= f.text_field :name, class: 'form-control' %>
      </div>


      <div class="form-group">
        <%= f.label :Пароль %>
        <% if @minimum_password_length %>
          <em>(минимум <%= @minimum_password_length %> символов)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :Подтверждение_пароля %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Зарегистрироваться", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

<% end %>

<br>
<%= render "devise/shared/links" %>
